@page
@model WepApp.Pages.Compra.GridModel
@{
}

<div class="container">

    <div class="card">
        <div class="card-header">
            Compra
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bx-add-to-queue'></i>
            </a>


            <div class="row">
                <div class="col-12">
                    <table id="GridView" class="table table-bordered table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Id Compra</th>
                                <th>Cliente</th>
                                <th>Producto</th>
                                <th>Fecha Compra</th>
                                <th>Monto</th>
                                <th>Impuesto</th>
                                <th>Total</th>
                                <th>Observaciones</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.GridList)
                            {
                            <tr>
                                <td>@item.IdCompra</td>
                                <td>@item.Cliente.NombreCompleto</td>
                                <td>@item.Producto.Descripcion</td>
                                <td>@item.FechaCompra</td>
                                <td>@item.Monto</td>
                                <td>@item.Impuesto</td>
                                <td>@item.Total</td>
                                <td>@item.Observaciones</td>
                                <td>@item.Estado</td>
                                <td>
                                    <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdCompra">
                                        <i class='bx bxs-edit'></i>
                                    </a>

                                    <button type="button" class="btn btn-outline-primary"
                                            onclick="CompraGrid.OnClickEliminar(@item.IdCompra)">
                                        <i class='bx bx-trash'></i>
                                    </button>
                                </td>
                            </tr>

                            }




                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts{


    <script>
        var MensajeApp = "@Html.Raw(Model.Mensaje)";
    </script>

    <script defer src="~/App/Compra/Grid.js"></script>

}
